style.
    .content {
        display: flex;
        flex-direction: column;
    }
    .header {
        height: 64;
        background-color: #00a3ed;
        display: flex;
        flex-direction: column;
    }
    .nav {
        margin-top: 20;
        height: 44;
        display: flex;
        flex-direction: row;
        align-items: center;
    }
    .menu-icon {
        height:24;
        width:24;
        margin-left:15;
        margin-top:2;
        margin-right: 10;
    }
    .title {
        color: #ffffff;
        font-size: 18;
        margin-left: 5;
    }
    .message-icon {
        height:26;
        width:26;
        margin-right: 10;
    }
    .more-icon {
        height:26;
        width:26;
        margin-right: 10;
    }
    .space {
        flex-grow: 1;
    }

    .slider {
        height: 230;
    }
    .slider-img {
        display:flex;
        align-items: center;
    }
    .top-title {
        color: #ffffff;
        font-size: 20;
        width: 380;
        position: absolute;
        bottom:20;
    }
    .scroll-view {
        position: absolute;
        top: 296;
        bottom:0;
        left: 0;
        right: 0;
        background-color:#f2f2f2;
    }
    .li{
        display:flex;
        flex-direction:row;
        margin-top:10;
        margin-left:10;
        margin-right:10;
        background-color:#ffffff;
        height:100;
    }
    .left{
        position: absolute;
        left:10;
        right:100;
        height:100%;
        
    }
    .item-title {
        width: 100%;
    }
    .right{
        position: absolute;
        right:0;
        width:100;
        height:100%;
        display:flex;
        align-items:center;
        justify-content:center;
    }

    .parent {
        background-color: #ff0000;
        width: 200;
        height: 300;
    }
    .child-1 {
        width:100;
        height:100;
        background-color: #00ff00;
    }
    .child-2 {
        width: 100%;
        background-color: #0000ff;
        top:30;
        color:#ffffff;
    }

    .item-img{
        height:80;
        width:80;
        margin-right:10;
    }

    
